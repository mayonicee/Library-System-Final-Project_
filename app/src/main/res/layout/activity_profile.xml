<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F8">

    <!-- Konten scrollable (PROFILE) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER -->
            <TextView
                android:id="@+id/txtTitleProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#222222"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="16dp" />

            <!-- CARD VIEW MODE -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"
                        android:background="@android:color/darker_gray"
                        android:contentDescription="Avatar"
                        android:layout_marginEnd="16dp"
                        android:adjustViewBounds="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/txtSid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="SID: -"
                            android:textSize="14sp"
                            android:textColor="#555555" />

                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Email: -"
                            android:textSize="14sp"
                            android:textColor="#777777" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TOMBOL EDIT (MODE VIEW) -->
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:backgroundTint="#6200EE"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- FORM EDIT (MODE EDIT, AWALNYA HIDDEN) -->
            <LinearLayout
                android:id="@+id/editContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap avatar untuk mengganti foto"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:paddingBottom="8dp" />

                <!-- NAMA -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/edtFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:inputType="textPersonName"
                    android:hint="Enter your name" />

                <!-- SID -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SID"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/edtSid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:inputType="text"
                    android:hint="Student ID" />

                <!-- EMAIL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:inputType="textEmailAddress"
                    android:hint="email@example.com" />

                <!-- STATUS EDIT -->
                <TextView
                    android:id="@+id/txtStatusEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: -"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="12dp" />

                <!-- BUTTON SAVE / CANCEL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnCancelEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnSaveProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:backgroundTint="#6200EE"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- STATUS UMUM (ERROR / DEBUG) -->
            <TextView
                android:id="@+id/txtStatusProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#FF5252"
                android:paddingTop="8dp" />

            <!-- LOGOUT BUTTON -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnAdminPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Panel"
                android:visibility="gone" />

            <!-- Spacer biar konten ga ketutup BottomNav -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu" />

    <!-- FAB Scan -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScan"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Scan book QR"
        android:src="@drawable/ic_qr_code_scanner_24"
        android:tint="@android:color/white"
        app:backgroundTint="@color/white"
        app:borderWidth="0dp"
        app:maxImageSize="32dp"
        app:layout_anchor="@id/bottom_nav"
        app:layout_anchorGravity="top|center_horizontal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
