<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="false"
    android:focusable="false"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- ROW ATAS: COVER + INFO + BUTTON EDIT/DELETE/QR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- COVER -->
            <ImageView
                android:id="@+id/imgBookCoverAdmin"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_marginEnd="8dp" />

            <!-- TEXT + BUTTON -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtBookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/txtBookAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By Author"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/txtBookCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category: -"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/txtBookCopies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 of 0 copies"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />

                <!-- BUTTON BAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnEditBook"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Edit"
                        android:textSize="7dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_circle_purple"
                        android:maxLines="1" />

                    <Button
                        android:id="@+id/btnDeleteBook"
                        android:layout_width="12dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Delete"
                        android:textSize="7dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_circle_purple"
                        android:maxLines="1" />

                    <Button
                        android:id="@+id/btnQrBook"
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="QR"
                        android:textSize="7dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_circle_purple"
                        android:maxLines="1" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- DROPDOWN QR  -->
        <LinearLayout
            android:id="@+id/layoutQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtQrLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QR for: "
                android:textSize="13sp"
                android:textColor="#666666" />

            <ImageView
                android:id="@+id/imgQrPreview"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:background="@android:color/white"
                android:padding="8dp"
                android:scaleType="fitCenter" />

            <Button
                android:id="@+id/btnDownloadQr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Download QR" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
