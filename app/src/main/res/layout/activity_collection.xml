<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCollection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151829">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtCollectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Collection"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/txtCollectionEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No books in your collection."
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:visibility="gone"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCollection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="60dp"/>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu" />

    <!-- FAB Scan -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScan"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_qr_code_scanner_24"
        android:tint="@android:color/white"
        app:backgroundTint="@color/white"
        app:borderWidth="0dp"
        app:maxImageSize="32dp"
        app:layout_anchor="@id/bottom_nav"
        app:layout_anchorGravity="top|center_horizontal"
        android:contentDescription="@string/app_name" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
