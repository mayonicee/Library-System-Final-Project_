<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Konten utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtTitleManageBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Books"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:paddingBottom="12dp"/>

        <!-- status loading / error -->
        <TextView
            android:id="@+id/txtStatusBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#FF5252"
            android:paddingBottom="4dp"/>

        <!-- pesan kosong -->
        <TextView
            android:id="@+id/txtEmptyBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No books yet."
            android:textSize="14sp"
            android:textColor="#777777"
            android:visibility="gone"
            android:paddingBottom="4dp"/>

        <!-- list buku -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBooksAdmin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- FAB tambah buku -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white"
        app:backgroundTint="#6200EE"
        app:layout_anchorGravity="bottom|end"
        android:contentDescription="Add book"
        app:layout_anchor="@id/rvBooksAdmin"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
