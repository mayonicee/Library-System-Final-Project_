<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F8"
    tools:ignore="ExtraText">

    <!-- Konten scrollable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/detailScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER SIMPLE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:tint="#222222"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Book Detail"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- HEADER ATAS (cover + info) -->
            <RelativeLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_header_round"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgCover"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:id="@+id/infoColumn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/imgCover"
                    android:layout_alignBottom="@id/imgCover"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toEndOf="@id/imgCover"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Thinking about water"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="By Nirat Bhatnagara"
                        android:textColor="#B3FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="6 of 10 copies available"
                        android:textColor="#FFCC80"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <!-- ROW: Borrow + Bookmark -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBorrow"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingLeft="22dp"
                            android:paddingRight="22dp"
                            android:text="Borrow Now"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            app:backgroundTint="#FF5252"
                            app:cornerRadius="24dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/btnBookmarkIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="2dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Bookmark"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_bookmark_24"
                            android:tint="@android:color/white"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <!-- Status & Doc ID (hidden by default) -->
            <TextView
                android:id="@+id/StatusMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status load data..."
                android:textColor="#777777"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/BookId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doc ID:"
                android:textColor="#999999"
                android:textSize="12sp"
                android:paddingBottom="12dp"
                android:visibility="gone" />

            <!-- SYNOPSIS -->
            <TextView
                android:id="@+id/txtSynopsisLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/Synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="this the first example data for our application"
                android:textColor="#555555"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="12dp" />

            <!-- CATEGORY -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category: "
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fiction"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- YEAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year: "
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- ISBN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN: "
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Isbn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="978-1234567890"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Similar Books header -->
            <TextView
                android:id="@+id/txtSimilarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Similar books"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSimilarBooks"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:clipToPadding="false" />

            <!-- Spacer buat kasih ruang di atas bottom nav -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu" />

    <!-- FAB Scan di tengah bawah -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScan"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_qr_code_scanner_24"
        android:tint="@android:color/white"
        app:backgroundTint="@color/white"
        app:borderWidth="0dp"
        app:maxImageSize="32dp"
        app:layout_anchor="@id/bottom_nav"
        app:layout_anchorGravity="top|center_horizontal"
        android:contentDescription="@string/app_name" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
